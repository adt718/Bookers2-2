<table class="table table-hove">
  <thead>
    <tr><th></th><th>Title</th><th>Opinion</th><th></th><th></th></tr>
  </thead>
  <tbody>

    <tr>
      <td>
        <%= link_to user_path(book.user) do %>
          <%= attachment_image_tag book.user, :profile_image, size: '50x50', fallback: 'no_image.jpg'  %>
        <!--fallback: 'no-image.jpg', size:'50x50'-->
        <% end %>
      </td>
      <td><%= link_to book.title, book_path(book) %></td>
      <td><%= book.body %></td>
      <td id="favorite-btn"><%= render "favorites/favorite", book: book %></td>

      <td class="comments-table">コメント数：<%= book.book_comments.count %></td>
    </tr>
  </tbody>
</table>