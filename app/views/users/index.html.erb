<div class="container px-5 px-sm-0">
  <div class="row">
  <div class="col-md-3">

  <h2>User info</h2>
  <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, fallback: "no_image.jpg" ,format: 'no_image.jpg' %>

<table class="table">
  <tbody><tr></tr>
  <tr>
	  <th>name</th>
	  <th></th>
  </tr>
  <tr>
	  <th>introduction</th>
	    <%= link_to"",edit_user_path(current_user.id), class: "btn btn-outline-secondary btn-block fas fa-user-cog"%>

  </tr>
</tbody></table>

  <%= form_for(@book,  url: books_path) do |f| %>

<h2 class="mt-3">New book</h2>
<div class="form-group">
    <label for="book_title">Title</label>
    <input class="form-control book_title" type="text" name="book[title]" id="book_title">
  </div>

<div class="form-group">
    <label for="book_opinion">Opinion</label>
    <textarea class="form-control book_body" name="book[body]" id="book_body"></textarea>
  </div>

<div class="form-group">
    <input type="submit" name="commit" value="Create Book" class="btn btn-success" data-disable-with="Create Book">
  </div>
      <% end %>
  </div>

  <div class= "col-md-8 offset-md-1">
    <h2>Users</h2>
    <table class='table'>

    <% @users.each do |user| %>
    <tr>
    <td><%= attachment_image_tag user, :profile_image, :fill, 20, 20, fallback: "no_image.jpg",size:'20x20',format: 'no_image.jpg' %></td>
   <th><%= user.name %><th>
   <th><%= link_to"Show",user_path(user.id) %></th>
   </tr>
   <% end %>
   </table>
  </div>
 </div>
 </div>